{
  "compilerOptions": {
    "module": "esnext",
    "verbatimModuleSyntax": false,
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "vue", "electron"],
    "composite": true
  },
  "include": ["test/**/*.ts", "app/**/*.ts", "app/**/*.vue", "electron/**/*.cts", "electron/**/*.d.ts"],
  "exclude": ["node_modules"]
}
