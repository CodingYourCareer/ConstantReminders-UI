{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "verbatimModuleSyntax": false,
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
