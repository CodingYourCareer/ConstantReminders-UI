{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"], // Include Jest types explicitly
    "module": "CommonJS", // or "preserve"
    "target": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true // Optional: Avoid checking type declaration files
  },
  "include": [
    "src/**/*",          // Adjust based on your folder structure
    "test/**/*",        // Include test files
    "node_modules/@types" // Include type declarations
  ]
}
