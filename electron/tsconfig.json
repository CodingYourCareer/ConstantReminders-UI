{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "background.cts",
    "singleInstance.cts",
    "preload.cts",
    "dynamicRenderer.cts",
    "modules/macMenu.cts",
    "modules/titleBarActions.cts",
    "modules/updater.cts"
  ]
}
