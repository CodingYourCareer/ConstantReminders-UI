{
  "name": "constant-reminders",
  "type": "module",
  "author": "CodingYourCareer",
  "description": "Nuxt3 + Electron app to remind you of your stuff constantly",
  "version": "1.0.0",
  "private": true,
  "main": ".output/electron/background.cjs",
  "scripts": {
    "dev": "nuxt dev -o",
    "build": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && electron-builder install-app-deps",
    "transpile-electron": "tsc -p ./electron --outDir .output/electron",
    "start:electron": "electron ./.output/electron/background.cjs",
    "dev:electron": "yarn transpile-electron && wait-on http://localhost:3000 && yarn start:electron",
    "dev:electron:win": "set NODE_ENV=development& concurrently --kill-others \"nuxt dev\" \"wait-on http://localhost:3000 && yarn transpile-electron && yarn start:electron\"",
    "build:electron": "yarn build && yarn transpile-electron && node build.js",
    "watch:electron": "tsc-watch -p ./electron --outDir .output/electron --onSuccess \"yarn start:electron\"",
    "test": "jest --coverage",
    "lighthouse": "npx unlighthouse --site localhost:3000"
  },
  "engines": {
    "node": ">=22",
    "yarn": "*"
  },
  "devDependencies": {
    "@hebilicious/vue-query-nuxt": "^0.3.0",
    "@iconify-json/mdi": "^1.2.2",
    "@nuxt/eslint": "0.7.4",
    "@nuxt/eslint-config": "^0.7.4",
    "@nuxt/fonts": "0.10.3",
    "@nuxt/icon": "1.10.3",
    "@nuxt/scripts": "0.9.5",
    "@nuxt/ui": "3.0.0-alpha.10",
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/seo": "2.0.2",
    "@sidebase/nuxt-auth": "0.9.4",
    "@tailwindcss/vite": "4.0.0-beta.8",
    "@tanstack/vue-query": "^5.62.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/semver": "^7.5.8",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-vue-composable": "^1.0.0",
    "jest": "^29.7.0",
    "next-auth": "~4.21.1",
    "nuxt": "^3.15.0",
    "sass": "^1.83.0",
    "sass-loader": "^16.0.4",
    "serverless": "^3.29.0",
    "serverless-cf-invalidate-proxy": "^1.0.1",
    "serverless-domain-manager": "^7.4.0",
    "serverless-plugin-common-excludes": "^4.0.0",
    "serverless-s3-sync": "^3.3.0",
    "tailwindcss": "4.0.0-beta.8",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vue": "latest",
    "vue-tsc": "^2.1.10",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "electron-log": "^5.2.2",
    "electron-updater": "^6.3.9",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2"
  },
  "packageManager": "yarn@1.22.19+sha1.4ba7fc5c6e704fce2066ecbfb0b0d8976fe62447"
}
